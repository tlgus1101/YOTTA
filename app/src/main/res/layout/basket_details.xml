<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ySelectDetailsLayout"
    android:orientation="vertical"
    android:layout_width="270dp"
    android:layout_height="280dp"
    android:textAlignment="center" android:layout_gravity="center">

    <!-- android:background="@drawable/changeprice" -->

    <LinearLayout
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/LinearLayoutHeader"
        android:orientation="horizontal">

        <ImageView
            android:layout_gravity="center"
            android:layout_width="90dp" android:layout_height="90dp"
            android:id="@+id/ImageViewProduct"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/no"
            android:layout_margin="5dip" />


        <NumberPicker
            android:layout_gravity="center|right"
            android:id="@+id/npid"
            android:layout_marginLeft="20dp"
            android:layout_width="50dp"
            android:layout_height="100dp"
            android:textColor ="@color/black"
            android:background="@color/basic_dark"
            android:solidColor="@color/basic_light" />

    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/TextViewProductTitle"
        android:layout_margin="5dip"
        android:textSize="16dip"
        android:text=" 제품 이름 "
        android:textAlignment="center"
        android:minLines="2"
        android:textColor="@color/basic_deep_deep"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/TextViewProductDetails"
        android:textColor="@color/dark_yellow"
        android:textAlignment="center"
        android:text="제품 상세설명"
        android:textSize="15dp" />

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical">

        <!-- ※이 에디트텍스트는 여기서 서버에 가격추가를 할지말지 결정되면 다시 만들 것※ -->
        <!--<EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:digits="0123456789"
            android:text="0123456789"
            android:id="@+id/editPrice"
            android:visibility="gone"/>
            -->
        <Button
            android:padding="5dp"
            android:layout_gravity="center|bottom"
            android:layout_width="80dp" android:layout_height="30dp"
            android:id="@+id/ButtonAddToCart"
            android:text="장바구니" android:textColor="@color/basic_deep_deep"
            android:textSize="13dp" android:textAlignment="center"
            android:background="@drawable/border" />
    </LinearLayout>
</LinearLayout>