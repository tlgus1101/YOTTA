<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/yInsertLocationLayout"
    android:orientation="vertical"
    android:layout_width="320dp"
    android:layout_height="400dp"
    android:textAlignment="center" android:layout_gravity="center">
    <!-- android:background="@drawable/setmart" -->
    <!-- android:background="@drawable/insert_location" -->

    <RadioGroup
        android:id="@+id/rGrpMart"
        android:orientation="horizontal"
        android:checkedButton="@+id/radio_price"
        android:layout_marginTop="60dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
        <RadioButton
            android:id="@+id/nearMart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="대형마트"
            android:textColor="@color/black"
            android:checked="true"/>
        <RadioButton
            android:id="@+id/nearSuper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:text="중/소형마트"
            android:textColor="@color/black"/>
    </RadioGroup>

    <ListView
        android:id="@+id/nearLocationList"
        android:layout_width="250dp"
        android:layout_height="230dp"
        android:padding="15dp"
        android:layout_gravity="center"
        android:dividerHeight="1dp"
        android:divider="@color/basic" />

    <LinearLayout
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/nearLocationNo"
            android:layout_gravity="center"
            android:layout_width="70dp" android:layout_height="30dp"
            android:text="취소" android:textColor="@color/basic_text"
            android:textSize="13dp"
            android:background="@drawable/border_info"/>
        <Button
            android:id="@+id/nearLocationOk"
            android:layout_gravity="center"
            android:layout_width="70dp" android:layout_height="30dp"
            android:layout_marginLeft="50dp"
            android:text="설정" android:textColor="@color/basic_text"
            android:textSize="13dp"
            android:background="@drawable/border_info"/>

    </LinearLayout>
</LinearLayout>